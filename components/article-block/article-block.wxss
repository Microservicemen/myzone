.a-block {
  display: block;
  box-sizing: border-box;
  padding: 12px;
  box-shadow: 0 1px 1px 0 #dddddd;
}
.a-block-top {
  display: block;
  font-size: 16px;
  line-height: 24px;
  color: black;
  font-weight: 600;
}
.a-block-center {
  font-size: 0;
}
.a-block-center-left {
  vertical-align: middle;
  display: inline-block;
  width: 73%;
}
.a-block-center-left-100 {
  width: 100%;
}
.a-block-article {
  font-size: 14px;
  line-height: 22px;
  /*text-overflow: -o-ellipsis-lastline;*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.a-block-center-right {
  height: 66px;
  width: 27%;
  padding: 0 0 0 10px;
  vertical-align: middle;
  display: inline-block;
}
.a-block-img {
  background-color: lavender;
  width: 100%;
  height: 66px;
  overflow:hidden;
}
.a-block-bottom {
  margin-top: 10px;
  font-size: 13px;
  line-height: 22px;
  color: #555555;
}
