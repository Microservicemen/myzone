.index {
  font-size: 16px;
  background-color: lightblue;
}
.index-top {
  display: block;
  font-size:0;
  background-color: #222222;
  position: fixed;
  z-index: 10;
  top: 0;
  width: 100%;
  height: 45px;
  box-shadow: 0 0px 10px 0px #dddddd;
}
.index-top-left {
  box-sizing: border-box;
  color: #FFFFFF;
  width: 40px;
  vertical-align: middle;
  font-size: 25px;
  padding: 5px 10px;
  height: 45px;
  display: inline-block;
}
.index-top-center {
  color: #FFFFFF;
  display: inline-block;
  vertical-align: middle;
  margin-left:calc(50% - 40px);
  transform: translateX(-50%);
  line-height: 45px;
  font-size: 20px;
  font-weight: 500;
  text-align: center;
}
.index-top-right {
  /* display: inline-block; */
  float: right;
  height: 45px;
  margin-right: 15px;
  line-height: 45px;
  vertical-align: middle;
}
.icon-search {
  vertical-align: middle;
  font-size: 25px;
  color: #aaaaaa;
}
.fresh-text {
  display: block;
  text-align: center;
  height: 45px;
}
.fresh-img {
  width: 40px;
  height: 5px;
  text-align: center;
  vertical-align: middle;
  padding: 10px 0;
}
.loading-text {
  display: block;
  text-align: center;
  font-size: 12px;
  color: #888888;
}
.index-main {
  background-color: lightskyblue;
}
