.index {
  font-size: 16px;
  background-color: lightblue;
}
.index-top {
  display: block;
  font-size:0;
  background-color: #222222;
  position: fixed;
  z-index: 10;
  top: 0;
  width: 100%;
  height: 45px;
  box-shadow: 0 0px 10px 0px #dddddd;
}
.index-top-left {
  box-sizing: border-box;
  color: #FFFFFF;
  width: 40px;
  vertical-align: middle;
  font-size: 25px;
  padding: 5px 10px;
  height: 45px;
  display: inline-block;
}
.index-top-center {
  color: #FFFFFF;
  display: inline-block;
  vertical-align: middle;
  margin-left:50%;
  transform: translateX(-50%);
  line-height: 45px;
  font-size: 20px;
  font-weight: 500;
  text-align: center;
}
.index-top-right {
  /* display: inline-block; */
  float: right;
  height: 45px;
  margin-right: 15px;
  line-height: 45px;
  vertical-align: middle;
}
.icon-search {
  vertical-align: middle;
  font-size: 25px;
  color: #aaaaaa;
}
.my-self-trans {
  transition: all 0.3s;
  background-color: #ffffff;
}
.fresh-text {
  display: block;
  text-align: center;
  height: 45px;
}
.fresh-img {
  width: 40px;
  height: 5px;
  text-align: center;
  vertical-align: middle;
  padding: 10px 0;
}
.loading-text {
  display: block;
  text-align: center;
  font-size: 12px;
  color: #888888;
}
.index-main1{
  width: 50%;
  display: block;
  position: absolute;
  left: 0;
  background-color: lightskyblue;
}
.index-main2 {
  width: 50%;
  position: absolute;
  right: 0;
  display: block;
  background-color: lightskyblue;
}
.index-blocks {
  vertical-align: top;
  position: relative;
  height: 100%;
  display: block;
  padding: 10px 5px;
  width: 100%;
  background-color: #ffffff;
}
.picture-block-img {
  vertical-align: top;
  background-color: lavender;
  width: 100%;
}
.picture-block-span {
  background-color: rgba(255,255,255,0.5);
  position: absolute;
  bottom: 10px;
  padding: 10px;
  font-size: 12px;
  left: 0;
  right: 0;
  z-index: 10;
}
